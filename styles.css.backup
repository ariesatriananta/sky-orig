/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Color Palette */
    --primary-blue: #3B82F6;
    --primary-emerald: #10B981;
    --dark-blue: #1E40AF;
    --light-blue: #DBEAFE;
    --dark-emerald: #047857;
    --light-emerald: #D1FAE5;
    
    /* Neutral Colors */
    --white: #FFFFFF;
    --gray-50: #F9FAFB;
    --gray-100: #F3F4F6;
    --gray-200: #E5E7EB;
    --gray-300: #D1D5DB;
    --gray-400: #9CA3AF;
    --gray-500: #6B7280;
    --gray-600: #4B5563;
    --gray-700: #374151;
    --gray-800: #1F2937;
    --gray-900: #111827;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    
    /* Border Radius */
    --radius-sm: 4px;
    --radius-md: 6px;
    --radius-lg: 12px;
    --radius-xl: 16px;
    --radius-2xl: 24px;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: var(--gray-900);
    background-color: var(--gray-50);
    letter-spacing: -0.01em;
}

/* Login Screen */
.login-screen {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-emerald) 100%);
    padding: 20px;
}

.login-container {
    background: var(--white);
    padding: 48px;
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-xl);
    width: 100%;
    max-width: 400px;
    text-align: center;
}

.login-header h1 {
    font-size: 28px;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 8px;
    letter-spacing: -0.02em;
}

.login-subtitle {
    color: var(--gray-500);
    font-size: 14px;
    margin-bottom: 32px;
}

.login-form {
    text-align: left;
}

.form-group {
    margin-bottom: 24px;
}

.form-group label {
    display: block;
    font-weight: 500;
    color: var(--gray-700);
    margin-bottom: 8px;
    font-size: 14px;
}

.form-group input,
.form-group select,
.form-group textarea {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--gray-300);
    border-radius: var(--radius-lg);
    font-size: 16px;
    transition: all 0.2s ease;
    background: var(--white);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.login-btn {
    width: 100%;
    padding: 14px;
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-emerald) 100%);
    color: var(--white);
    border: none;
    border-radius: var(--radius-lg);
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
}

.login-btn:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-lg);
}

/* Main Application */
.main-app {
    min-height: 100vh;
}

.hidden {
    display: none !important;
}

/* Navigation */
.navbar {
    background: var(--white);
    border-bottom: 1px solid var(--gray-200);
    padding: 16px 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: var(--shadow-sm);
    position: sticky;
    top: 0;
    z-index: 100;
}

.nav-brand h2 {
    font-size: 20px;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 2px;
}

.nav-subtitle {
    font-size: 12px;
    color: var(--gray-500);
}

.nav-menu {
    display: flex;
    align-items: center;
    gap: 8px;
}

.nav-item {
    padding: 10px 16px;
    background: none;
    border: none;
    border-radius: var(--radius-lg);
    font-size: 14px;
    font-weight: 500;
    color: var(--gray-600);
    cursor: pointer;
    transition: all 0.2s ease;
}

.nav-item:hover {
    background: var(--gray-100);
    color: var(--gray-900);
}

.nav-item.active {
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-emerald) 100%);
    color: var(--white);
}

.logout-btn {
    padding: 10px 16px;
    background: var(--gray-100);
    border: none;
    border-radius: var(--radius-lg);
    font-size: 14px;
    font-weight: 500;
    color: var(--gray-700);
    cursor: pointer;
    transition: all 0.2s ease;
    margin-left: 16px;
}

.logout-btn:hover {
    background: var(--gray-200);
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 4px;
}

.mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: var(--gray-600);
    border-radius: 2px;
    transition: all 0.2s ease;
}

/* Sections */
.section {
    display: none;
    padding: 32px 0;
}

.section.active {
    display: block;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
}

.section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 32px;
}

.section-header h2 {
    font-size: 32px;
    font-weight: 700;
    color: var(--gray-900);
    letter-spacing: -0.02em;
}

.section-header h3 {
    font-size: 24px;
    font-weight: 600;
    color: var(--gray-900);
    letter-spacing: -0.01em;
}

/* Buttons */
.add-btn,
.edit-btn,
.save-btn,
.filter-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-emerald) 100%);
    color: var(--white);
    border: none;
    border-radius: var(--radius-lg);
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
}

.add-btn:hover,
.edit-btn:hover,
.save-btn:hover,
.filter-btn:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.cancel-btn {
    padding: 12px 20px;
    background: var(--gray-100);
    color: var(--gray-700);
    border: none;
    border-radius: var(--radius-lg);
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
}

.cancel-btn:hover {
    background: var(--gray-200);
}

.remove-btn {
    padding: 6px 12px;
    background: #EF4444;
    color: var(--white);
    border: none;
    border-radius: var(--radius-md);
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
}

.remove-btn:hover {
    background: #DC2626;
}

/* KPI Cards */
.kpi-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    margin-bottom: 48px;
}

.kpi-card {
    background: var(--white);
    padding: 24px;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--gray-200);
    display: flex;
    align-items: center;
    gap: 16px;
    transition: all 0.2s ease;
}

.kpi-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
}

.kpi-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
}

.kpi-icon.revenue {
    background: var(--light-emerald);
}

.kpi-icon.active {
    background: var(--light-blue);
}

.kpi-icon.available {
    background: #FEF3C7;
}

.kpi-icon.categories {
    background: #F3E8FF;
}

.kpi-content h3 {
    font-size: 24px;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 4px;
}

.kpi-content p {
    font-size: 14px;
    color: var(--gray-500);
}

/* Dashboard Sections */
.dashboard-section {
    background: var(--white);
    padding: 32px;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--gray-200);
    margin-bottom: 32px;
}

/* Categories Grid */
.categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 16px;
}

.category-card {
    background: var(--gray-50);
    padding: 20px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--gray-200);
    text-align: center;
    transition: all 0.2s ease;
    position: relative;
}

.category-card:hover {
    background: var(--gray-100);
    transform: translateY(-2px);
}

.category-card h4 {
    font-size: 16px;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 8px;
}

.category-card p {
    font-size: 14px;
    color: var(--gray-600);
}

.category-actions {
    position: absolute;
    top: 8px;
    right: 8px;
    display: flex;
    gap: 4px;
}

.category-actions button {
    width: 24px;
    height: 24px;
    border: none;
    border-radius: var(--radius-sm);
    cursor: pointer;
    font-size: 12px;
    transition: all 0.2s ease;
}

.edit-category-btn {
    background: var(--primary-blue);
    color: var(--white);
}

.delete-category-btn {
    background: #EF4444;
    color: var(--white);
}

/* Filters */
.filters {
    display: flex;
    gap: 16px;
    margin-bottom: 24px;
    flex-wrap: wrap;
}

.search-input,
.filter-select,
.date-input {
    padding: 10px 16px;
    border: 1px solid var(--gray-300);
    border-radius: var(--radius-lg);
    font-size: 14px;
    background: var(--white);
    transition: all 0.2s ease;
}

.search-input {
    flex: 1;
    min-width: 200px;
}

.filter-select,
.date-input {
    min-width: 150px;
}

.search-input:focus,
.filter-select:focus,
.date-input:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* Tables */
.table-container {
    background: var(--white);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--gray-200);
}

.data-table {
    width: 100%;
    border-collapse: collapse;
}

.data-table th {
    background: var(--gray-50);
    padding: 16px;
    text-align: left;
    font-weight: 600;
    color: var(--gray-700);
    font-size: 14px;
    border-bottom: 1px solid var(--gray-200);
}

.data-table td {
    padding: 16px;
    border-bottom: 1px solid var(--gray-100);
    font-size: 14px;
    color: var(--gray-900);
}

.data-table tr:hover {
    background: var(--gray-50);
}

.item-image {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    object-fit: cover;
    border: 1px solid var(--gray-200);
}

.status-badge {
    padding: 4px 12px;
    border-radius: var(--radius-2xl);
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.status-available {
    background: var(--light-emerald);
    color: var(--dark-emerald);
}

.status-rented {
    background: var(--light-blue);
    color: var(--dark-blue);
}

.status-active {
    background: var(--light-blue);
    color: var(--dark-blue);
}

.status-returned {
    background: var(--light-emerald);
    color: var(--dark-emerald);
}

.status-late {
    background: #FEE2E2;
    color: #DC2626;
}

.action-btn {
    padding: 6px 12px;
    border: none;
    border-radius: var(--radius-md);
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-right: 4px;
}

.edit-action-btn {
    background: var(--primary-blue);
    color: var(--white);
}

.delete-action-btn {
    background: #EF4444;
    color: var(--white);
}

.return-action-btn {
    background: var(--primary-emerald);
    color: var(--white);
}

.action-btn:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
}

/* Modals */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
}

.modal-content {
    background: var(--white);
    margin: 5% auto;
    padding: 0;
    border-radius: var(--radius-xl);
    width: 90%;
    max-width: 600px;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: var(--shadow-xl);
}

.modal-header {
    padding: 24px 32px;
    border-bottom: 1px solid var(--gray-200);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.modal-header h3 {
    font-size: 20px;
    font-weight: 600;
    color: var(--gray-900);
}

.close {
    font-size: 28px;
    font-weight: bold;
    color: var(--gray-400);
    cursor: pointer;
    transition: color 0.2s ease;
}

.close:hover {
    color: var(--gray-600);
}

.modal form {
    padding: 32px;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
}

.form-actions {
    display: flex;
    gap: 12px;
    justify-content: flex-end;
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid var(--gray-200);
}

/* Pricing Packages */
.pricing-package {
    display: flex;
    gap: 12px;
    align-items: center;
    margin-bottom: 12px;
}

.package-name,
.package-price {
    flex: 1;
    padding: 8px 12px;
    border: 1px solid var(--gray-300);
    border-radius: var(--radius-md);
    font-size: 14px;
}

.add-package-btn {
    padding: 8px 16px;
    background: var(--gray-100);
    color: var(--gray-700);
    border: none;
    border-radius: var(--radius-md);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-top: 8px;
}

.add-package-btn:hover {
    background: var(--gray-200);
}

/* Reports */
.report-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 32px;
}

.report-card {
    background: var(--white);
    padding: 32px;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--gray-200);
}

.report-card h3 {
    font-size: 18px;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 24px;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .container {
        padding: 0 16px;
    }
    
    .kpi-grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
    }
    
    .dashboard-section {
        padding: 24px;
    }
    
    .section-header h2 {
        font-size: 28px;
    }
}

@media (max-width: 768px) {
    .navbar {
        padding: 12px 16px;
    }
    
    .nav-menu {
        display: none;
    }
    
    .mobile-menu-toggle {
        display: flex;
    }
    
    .nav-brand h2 {
        font-size: 18px;
    }
    
    .login-container {
        padding: 32px 24px;
    }
    
    .section {
        padding: 24px 0;
    }
    
    .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 16px;
    }
    
    .section-header h2 {
        font-size: 24px;
    }
    
    .kpi-grid {
        grid-template-columns: 1fr;
        gap: 16px;
    }
    
    .kpi-card {
        padding: 20px;
    }
    
    .filters {
        flex-direction: column;
        gap: 12px;
    }
    
    .search-input,
    .filter-select,
    .date-input {
        width: 100%;
    }
    
    .form-row {
        grid-template-columns: 1fr;
        gap: 16px;
    }
    
    .form-actions {
        flex-direction: column;
    }
    
    .modal-content {
        width: 95%;
        margin: 10% auto;
    }
    
    .modal form {
        padding: 24px;
    }
    
    .modal-header {
        padding: 20px 24px;
    }
    
    .data-table {
        font-size: 12px;
    }
    
    .data-table th,
    .data-table td {
        padding: 12px 8px;
    }
    
    .report-grid {
        grid-template-columns: 1fr;
        gap: 24px;
    }
    
    .report-card {
        padding: 24px;
    }
    
    .categories-grid {
        grid-template-columns: 1fr;
        gap: 12px;
    }
    
    .pricing-package {
        flex-direction: column;
        gap: 8px;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 12px;
    }
    
    .login-container {
        padding: 24px 20px;
    }
    
    .login-header h1 {
        font-size: 24px;
    }
    
    .section-header h2 {
        font-size: 20px;
    }
    
    .kpi-card {
        padding: 16px;
        flex-direction: column;
        text-align: center;
    }
    
    .kpi-content h3 {
        font-size: 20px;
    }
    
    .dashboard-section {
        padding: 20px;
    }
    
    .modal-content {
        width: 98%;
        margin: 5% auto;
    }
    
    .data-table th,
    .data-table td {
        padding: 8px 4px;
        font-size: 11px;
    }
    
    .item-image {
        width: 32px;
        height: 32px;
    }
    
    .action-btn {
        padding: 4px 8px;
        font-size: 10px;
        margin-bottom: 4px;
    }
}

/* Touch-friendly enhancements */
@media (hover: none) and (pointer: coarse) {
    .nav-item,
    .add-btn,
    .edit-btn,
    .save-btn,
    .cancel-btn,
    .action-btn {
        min-height: 44px;
        min-width: 44px;
    }
    
    .form-group input,
    .form-group select,
    .form-group textarea {
        min-height: 44px;
    }
    
    .login-btn {
        min-height: 48px;
    }
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.section.active {
    animation: fadeIn 0.3s ease;
}

.modal {
    animation: fadeIn 0.2s ease;
}

/* Print styles */
@media print {
    .navbar,
    .filters,
    .form-actions,
    .action-btn,
    .add-btn,
    .edit-btn {
        display: none !important;
    }
    
    .section {
        display: block !important;
        page-break-inside: avoid;
    }
    
    .data-table {
        border-collapse: collapse;
    }
    
    .data-table th,
    .data-table td {
        border: 1px solid var(--gray-300);
    }
}

/* Barcode Scanner Styles */
.return-options {
    display: flex;
    gap: 12px;
    align-items: center;
}

.scan-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: linear-gradient(135deg, var(--primary-emerald) 0%, var(--dark-emerald) 100%);
    color: var(--white);
    border: none;
    border-radius: var(--radius-lg);
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
}

.scan-btn:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.scan-btn-small {
    padding: 8px 12px;
    background: var(--primary-emerald);
    color: var(--white);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.scan-btn-small:hover {
    background: var(--dark-emerald);
}

.barcode-input-group {
    display: flex;
    gap: 8px;
    align-items: center;
}

.barcode-input-group input {
    flex: 1;
}

/* Scanner Modal Styles */
.scanner-container {
    padding: 24px;
    text-align: center;
}

.scanner-area {
    width: 100%;
    height: 300px;
    background: var(--gray-900);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-bottom: 24px;
    overflow: hidden;
}

.scanner-area p {
    color: var(--white);
    font-size: 16px;
    z-index: 2;
}

.scanner-line {
    position: absolute;
    top: 50%;
    left: 10%;
    right: 10%;
    height: 2px;
    background: var(--primary-emerald);
    animation: scannerMove 2s ease-in-out infinite;
    z-index: 1;
}

@keyframes scannerMove {
    0%, 100% {
        transform: translateY(-50px);
        opacity: 0;
    }
    50% {
        transform: translateY(0);
        opacity: 1;
    }
}

.scanner-controls {
    display: flex;
    gap: 12px;
    justify-content: center;
    margin-bottom: 24px;
}

.manual-input {
    border-top: 1px solid var(--gray-200);
    padding-top: 24px;
    text-align: left;
}

.manual-input label {
    display: block;
    font-weight: 500;
    color: var(--gray-700);
    margin-bottom: 8px;
}

.manual-input input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--gray-300);
    border-radius: var(--radius-lg);
    font-size: 16px;
    margin-bottom: 12px;
}

/* Rental Info Styles */
.rental-info {
    background: var(--gray-50);
    padding: 20px;
    border-radius: var(--radius-lg);
    margin-bottom: 24px;
    border: 1px solid var(--gray-200);
}

.rental-info h4 {
    font-size: 16px;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 16px;
}

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 12px;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.info-item label {
    font-weight: 500;
    color: var(--gray-600);
    margin-right: 8px;
}

.info-item span {
    font-weight: 600;
    color: var(--gray-900);
}

/* Base Rate Styles */
.base-rate-item {
    display: flex;
    gap: 12px;
    align-items: center;
    margin-bottom: 12px;
    flex-wrap: wrap;
}

.rate-name,
.rate-price,
.rate-condition {
    flex: 1;
    min-width: 150px;
    padding: 8px 12px;
    border: 1px solid var(--gray-300);
    border-radius: var(--radius-md);
    font-size: 14px;
}

/* Mobile Responsive Updates */
@media (max-width: 768px) {
    .return-options {
        flex-direction: column;
        align-items: stretch;
        gap: 8px;
    }
    
    .barcode-input-group {
        flex-direction: column;
        gap: 8px;
    }
    
    .scanner-area {
        height: 250px;
    }
    
    .scanner-controls {
        flex-direction: column;
        gap: 8px;
    }
    
    .info-grid {
        grid-template-columns: 1fr;
        gap: 8px;
    }
    
    .info-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 4px;
    }
    
    .base-rate-item {
        flex-direction: column;
        gap: 8px;
    }
    
    .rate-name,
    .rate-price,
    .rate-condition {
        min-width: auto;
        width: 100%;
    }
}

@media (max-width: 480px) {
    .scanner-container {
        padding: 16px;
    }
    
    .scanner-area {
        height: 200px;
    }
    
    .manual-input {
        padding-top: 16px;
    }
    
    .rental-info {
        padding: 16px;
    }
}

/* Enhanced Table Styles for Barcode Column */
.data-table th:nth-child(3),
.data-table td:nth-child(3) {
    font-family: 'Courier New', monospace;
    font-size: 12px;
}

/* Status Badge Updates */
.status-tersedia {
    background: var(--light-emerald);
    color: var(--dark-emerald);
}

.status-disewa {
    background: var(--light-blue);
    color: var(--dark-blue);
}

/* Camera Access Styles */
.camera-preview {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: var(--radius-lg);
}

.scanner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 2px solid var(--primary-emerald);
    border-radius: var(--radius-lg);
    pointer-events: none;
}

.scanner-corner {
    position: absolute;
    width: 20px;
    height: 20px;
    border: 3px solid var(--primary-emerald);
}

.scanner-corner.top-left {
    top: 20px;
    left: 20px;
    border-right: none;
    border-bottom: none;
}

.scanner-corner.top-right {
    top: 20px;
    right: 20px;
    border-left: none;
    border-bottom: none;
}

.scanner-corner.bottom-left {
    bottom: 20px;
    left: 20px;
    border-right: none;
    border-top: none;
}

.scanner-corner.bottom-right {
    bottom: 20px;
    right: 20px;
    border-left: none;
    border-top: none;
}
